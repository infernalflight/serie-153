{% extends 'base.html.twig' %}

{% block title %}Liste de séries{% endblock %}

{% block body %}
    <h1>Liste de séries</h1>

    <table>
    {% for serie in series %}
        <tr>
            <td>{{ serie.id }}</td>
            <td><a href="{{ path('serie_detail', {'id' : serie.id}) }}">{{ serie.name }}</a></td>
            <td>{{ serie.overview }}</td>
            <td>{{ serie.status }}</td>
            <td>{{ serie.genres }}</td>
            <td>{{ serie.firstAirDate|date('d/m/Y') }}</td>
        </tr>
    {% endfor %}
    </table>

{% endblock %}